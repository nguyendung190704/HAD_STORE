        <TextView android:id="@+id/tvMaKH" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#F44336" android:textSize="15sp" android:textStyle="bold"/>
        <TextView android:id="@+id/tvTenKH" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#143550" android:textSize="13sp" android:textStyle="bold"/>

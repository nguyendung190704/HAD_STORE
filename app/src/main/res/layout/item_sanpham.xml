<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:orientation="horizontal"
    android:gravity="center">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:id="@+id/imgAnhSp"
        android:src="@drawable/img_1" />

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvMaSp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F44336"
            android:textStyle="bold"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/tvTenSp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#03A9F4"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvSoLuongSp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#03A9F4"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvGiaSp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#03A9F4"
            android:inputType="number"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvtrangthaiSp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#03A9F4"
            android:inputType="number"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvMaHang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#03A9F4"
            android:inputType="number"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:text="UPDATE"
                android:layout_marginRight="30dp"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:backgroundTint="#2196F3"
                android:id="@+id/btnupdatesp" />

            <Button
                android:gravity="center"
                android:text="XÃ³a"
                android:backgroundTint="#FF5722"
                android:id="@+id/imgDeleteSach"
                android:layout_width="110dp"
                android:layout_height="42dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
